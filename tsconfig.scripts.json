{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "scripts/**/*.ts",
    "lib/**/*.ts",
    "app/**/*.ts",
    "components/**/*.ts"
  ],
  "exclude": ["node_modules"]
}